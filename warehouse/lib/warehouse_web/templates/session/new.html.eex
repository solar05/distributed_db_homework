<div class="row">
  <div class="column column-50 column-offset-25">
    <h1>Вход</h1>
    <%= form_for @changeset, @action, [as: :employee], fn f -> %>
      <%= label f, :first_name, "Имя" %>
      <%= text_input f, :first_name %>
      <%= error_tag f, :first_name %>

      <%= label f, :password, "Пароль" %>
      <%= password_input f, :password %>
      <%= error_tag f, :password %>

      <%= submit "Войти", class: "button button-primary" %>
    <% end %>
  </div>
</div>
